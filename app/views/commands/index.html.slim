
.container
  table.table.table-bordered.mt-3.table-sm
    thead
      tr
        th Title
        th Command
        th Category
        th
        th
        th

    tbody
      - @commands.each do |command|
        tr
          td = command.title
          td = command.command
          td = command.category
          td = link_to 'Show', command
          td = link_to 'Edit', edit_command_path(command)
          td = link_to 'Delete', command, method: :delete, data: { confirm: 'Are you sure?' }

  br

  = link_to 'New command', new_command_path, class: 'btn btn-primary mb-3'
